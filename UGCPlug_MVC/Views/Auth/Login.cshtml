@model UGCPlug_MVC.Models.BusinessLogin

@{
    ViewBag.Title = "Login - ";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-center">Business Login</h2>

@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

@using (Html.BeginForm("Login", "Auth", FormMethod.Post, new { @class = "needs-validation", novalidate = "novalidate" }))
{
    <div class="mb-3">
        @Html.LabelFor(m => m.BusinessEmail)
        @Html.TextBoxFor(m => m.BusinessEmail, new { @class = "form-control", placeholder = "Enter your email", type = "email" })
        @Html.ValidationMessageFor(m => m.BusinessEmail)
    </div>

    <div class="mb-3">
        @Html.Label("Password")
        @Html.PasswordFor(m => m.PasswordHash, new { @class = "form-control", placeholder = "Password" })
        @Html.ValidationMessageFor(m => m.PasswordHash)
    </div>

    <button type="submit" class="btn btn-primary w-100">Log In</button>
}
